<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<GridPane fx:id="gridPaneRoot" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fx.FXMLController">
   <columnConstraints>
      <ColumnConstraints fillWidth="true" percentWidth="20.0" />
      <ColumnConstraints fillWidth="true" percentWidth="60.0" />
      <ColumnConstraints fillWidth="true" percentWidth="20.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints fillHeight="true" percentHeight="3.0" />
      <RowConstraints fillHeight="true" percentHeight="80.0" />
      <RowConstraints fillHeight="true" percentHeight="2" />
      <RowConstraints fillHeight="true" percentHeight="15.0" />
   </rowConstraints>
   <children>
      <StackPane id="paneLeft" fx:id="panePrevTrack" GridPane.rowIndex="1" GridPane.columnIndex="0" onMouseClicked="#prevTrack">
         <children>
            <Label id="vertText" text="PREV"></Label>
         </children>
      </StackPane>
      <StackPane id="paneCenter" fx:id="paneCenter" GridPane.valignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.columnIndex="1" >
         <children>
            <ImageView id="imgView" fx:id="imgCover" onMouseClicked="#togglePlayPause"/>
         </children>
      </StackPane>
      <StackPane id="paneRight" fx:id="paneNextTrack" GridPane.rowIndex="1" GridPane.columnIndex="2" onMouseClicked="#nextTrack">
         <children>
            <Label id="vertText" text="NEXT" ></Label>
         </children>
      </StackPane>
      <StackPane id="paneBottom" fx:id="paneInfo" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3">
         <children>
            <VBox alignment="CENTER">
               <Label fx:id="infoTrack" id="infoTextFirstLine" text="placeholder - first line"></Label>
               <Label fx:id="infoArtistAlbum" id="infoTextSecondLine" text="placeholder long text here - second line"></Label>
            </VBox>
         </children>
      </StackPane>
      <!--<Button fx:id="btnTst" onAction="#exitApplication" text="Exit" GridPane.rowIndex="1" GridPane.columnIndex="2" alignment="BOTTOM_RIGHT"/>-->
   </children>
</GridPane>
